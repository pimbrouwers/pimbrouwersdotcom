{
  "dependencies": {
    "ditt0": "file:../ditto",
    "ditt0-hbs": "file:../ditto-hbs",
    "ditt0-markdown": "file:../ditto-markdown",
    "html-minifier": "^3.5.9",
    "http-server": "^0.11.1",
    "hydrogen-css": "github:pimbrouwers/hydrogen",
    "less": "2.7.2",
    "less-plugin-clean-css": "^1.5.1",
    "minimatch": "^3.0.4",
    "ncp": "^2.0.0",
    "npm": "^6.3.0",
    "npm-run-all": "^4.1.2",
    "watch": "^1.0.2"
  },
  "scripts": {
    "less": "lessc --clean-css ./css/style.less ./public/style.css",
    "pages": "node index.js",
    "server": "http-server ./public",
    "watch:less": "watch \"npm run less\" ./css --ignoreDotFiles --ignoreUnreadable",
    "watch:pages": "watch \"npm run pages\" ./src --ignoreDotFiles --ignoreUnreadable",
    "watch": "run-p watch:*",
    "develop": "run-p watch server",
    "start": "run-s less pages"
  }
}
