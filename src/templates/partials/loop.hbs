<div class="content pure-u-1 pure-u-md-16-24 pure-u-lg-3-4">
<div>
    <!-- All Posts -->
    <div class="posts">
        <h1 class="content-subhead">Posts</h1>
        {{#each posts}}
            <!-- Post -->
            <section class="post">
                <header class="post-header">
                    <!-- <img class="post-avatar" alt="Pim Brouwers&#x27;s avatar" height="48" width="48" src="{{resolve "./images/self.png"}}"> -->

                    <h2 class="post-title">{{title}}</h2>

                    <p class="post-meta">
                        By <a href="https://plus.google.com/u/0/111830860305577267596/about" rel="author" target="_blank" class="post-author">Pim Brouwers</a> 
                        {{{tags}}}
                    </p>
                </header>

                <div class="post-description">
                    <p>
                        {{{excerpt characters=230}}}...
                    </p>
                </div>
            </section>
        {{/each}}
    </div>
</div>